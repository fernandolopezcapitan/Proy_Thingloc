<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.dam.salesianostriana.di.thinglocv1.actitities.LoginActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageView2"
        android:src="@drawable/icon_lostfound"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ThingLoc"
        android:textSize="40dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usuario"
        android:hint="Usuario"
        android:textColor="#f0f4c3"
        android:background="#f9fbe7"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/pass"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2"
        android:gravity="center_horizontal" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pass"
        android:hint="ContraseÃ±a"
        android:inputType="textPassword"
        android:textColor="#1A100E"
        android:background="#f0f4c3"
        android:layout_above="@+id/btn_entrar"
        android:layout_marginBottom="15dp"
        android:layout_alignLeft="@+id/usuario"
        android:layout_alignStart="@+id/usuario"
        android:layout_alignRight="@+id/usuario"
        android:layout_alignEnd="@+id/usuario"
        android:gravity="center_horizontal" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Entrar"
        android:id="@+id/btn_entrar"
        android:textSize="15dp"
        android:textColor="#f9fbe7"
        android:background="#827717"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/pass"
        android:layout_alignStart="@+id/pass" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Registrar"
        android:id="@+id/btn_register"
        android:textSize="15dp"
        android:textColor="#f9fbe7"
        android:background="#827717"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/pass"
        android:layout_alignEnd="@+id/pass" />


</RelativeLayout>
